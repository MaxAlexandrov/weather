<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:id="@+id/dialog_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:theme="@style/AppTheme"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_information_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/dialog_information_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialog_information_country"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/dialog_information_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialog_information_city"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/dialog_information_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialog_information_data"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/dialog_information_clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialog_information_time"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/dialog_information_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialog_information_clouds"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/dialog_information_wet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialog_information_degree"
        android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/btnYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/yes">
        </Button>
</LinearLayout>
    </ScrollView>
</RelativeLayout>
